@model AzureBootCamp.Models.ForgotPassword

@{
    ViewData["Title"] = "Reset";
}
<div class="container py-2">
    <h3 class="text-center">Reset Password</h3>
    <hr />
    //@if (ViewBag.Message != null)
    {
        <div class="d-flex flex-column justify-content-center m-3">
            <div class="text-center">
                <!-- UI-only: No message display -->
                <br />
                <a class="btn btn-primary" asp-action="Login">Ok</a>
            </div>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center row">
            <div class="col-sm-12 col-md-4">
                <form asp-action="Reset">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- UI-only: No hidden input -->
                    <div class="form-group m-1">
                        <label for="email" class="control-label m-1">Email <span class="text-danger">*</span></label>
                        <input type="email" id="email" name="email" class="form-control" />
                    </div>
                    <div class="form-group m-1">
                        <label for="password" class="control-label m-1">Create New Password <span class="text-danger">*</span></label>
                        <input maxlength="15" type="password" id="password" name="password" class="form-control" />
                    </div>
                    <div class="form-group m-1">
                        <label for="confirmPassword" class="control-label m-1">Confirm Password <span class="text-danger">*</span></label>
                        <input maxlength="15" type="password" id="confirmPassword" name="confirmPassword" class="form-control" />
                    </div>
                    <div class="form-group d-flex justify-content-end m-1">
                        <input type="submit" value="Reset" class="btn btn-primary m-1" />
                        <a class="btn btn-link m-1" asp-action="Login">Login</a>
                    </div>
                </form>
            </div>
        </div>
    }

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
